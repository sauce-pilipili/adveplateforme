{% extends 'baseAdmin.html.twig' %}
{% block title %}Editer la catégorie{% endblock %}
    {% block body %}
        <div class="main">
            {{ include('_include/_navigation.html.twig') }}
            <div class="content">
                <div class="welcome-container-title">
                    <h1 style="flex: none">Modifier la catégorie</h1>
                    <a class="bouton-2" href="{{ path('article_categories_index') }}">Quitter <i class="fas fa-times"></i></a>
                </div>
                <div class="welcome-container form">
                    <div class="formCategorie">
                        {{ form_start(form) }}
                        <h2>Modifier le nom de la catégorie</h2>
                        {{ form_row(form.name) }}
                        <button class="bouton-1" style="border: none">{{ button_label|default('Modifer') }}<i class="fas fa-chevron-right"></i></button>
                        {{ form_end(form) }}
                    </div>
                </div>

            </div>
        </div>
    {% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/formulaire.css') }}">
{% endblock %}
