{% extends 'baseAdmin.html.twig' %}
{% block title %}Utilisateur{% endblock %}
    {% block body %}
        <div class="main">
            {{ include('_include/_navigation.html.twig') }}
            <div class="content">
                <div class="welcome-container-title">
                    <h1 style="flex: none">Modifier votre profil</h1>
                    <a class="bouton-2" href="{{ path('user_profil',{id:app.user.id}) }}">Quitter <i class="fas fa-times"></i></a>
                </div>
                <div class="welcome-container form">
                    <div class="formCategorie">
                        {% for message in app.flashes('success') %}
                            <div class="greenalert">
                                <div class="close" id="close" onclick="$('.fas').parents('.greenalert').remove();"><i
                                            class="fas fa-times"></i></div>
                                <div class="success-alert">
                                    <p>{{ message }}</p>
                                </div>
                            </div>
                        {% endfor %}
                        {% for message in app.flashes('danger') %}
                            <div class="redalert">
                                <div class="close" id="close" onclick="$('.fas').parents('.redalert').remove();"><i
                                            class="fas fa-times"></i></div>
                                <div class="danger-alert">
                                    <p>{{ message }}</p>
                                </div>
                            </div>
                        {% endfor %}
                        {{ form_start(form) }}
                            <p>Votre mot de passe actuel</p>
                            {{ form_row(form.ActualPassword) }}
                            <p>Votre nouveau mot de passe</p>
                            {{ form_row(form.password) }}
                            <p>Confirmez votre mot de passe</p>
                            {{ form_row(form.password2) }}
                        <button class="bouton-1" style="border: none">{{ button_label|default('Enregistrer') }}</button>
                        {{ form_end(form) }}

                    </div>
                </div>

            </div>
        </div>
    {% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/formulaire.css') }}">
{% endblock %}
