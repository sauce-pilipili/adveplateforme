{% extends 'baseAdmin.html.twig' %}
{% block title %}Les classes decouverte{% endblock %}
{% block body %}
    <div class="main">
        {{ include('_include/_navigation.html.twig') }}
        <div class="content">
            <div class="container">
                <div class="ajout-galerie">
                    <h1>Les thématiques de classe découverte</h1>
                </div>
                <div class="bloc-galerie">
                    {% for classe_decouverte_categorie in classe_decouverte_categories %}
                        <script>AjaxLengthTheme('{{ classe_decouverte_categorie.name }}', {{ classe_decouverte_categorie.id }})</script>
                        <div class="galerie galerie-item">
                            <a href="{{ path('classe_decouverte_index',{name: classe_decouverte_categorie.name}) }}">

                                <div class="galerie-desc">
                                    <h2>{{ classe_decouverte_categorie.name }}</h2>
                                    <p id="lengthArticle{{ classe_decouverte_categorie.id }}"></p>
                                </div>

                            </a>
                            <div class="galerie-action">
                                <form method="post"
                                      action="{{ path('classe_decouverte_categorie_delete', {'id': classe_decouverte_categorie.id}) }}"
                                      onsubmit="return confirm('Voulez-vous supprimer cette thématique ?');">
                                    <input type="hidden" name="_token"
                                           value="{{ csrf_token('delete' ~ classe_decouverte_categorie.id) }}">
                                    <button class="btn" style="border: none">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20"
                                             viewBox="0 0 20 20">
                                            <path id="delete"
                                                  d="M7,4A2,2,0,0,1,9,2h6a2,2,0,0,1,2,2V6h4a1,1,0,0,1,0,2H19.931l-.867,12.142A2,2,0,0,1,17.069,22H6.931a2,2,0,0,1-1.995-1.858L4.069,8H3A1,1,0,0,1,3,6H7ZM9,6h6V4H9ZM6.074,8l.857,12H17.069l.857-12ZM10,10a1,1,0,0,1,1,1v6a1,1,0,0,1-2,0V11A1,1,0,0,1,10,10Zm4,0a1,1,0,0,1,1,1v6a1,1,0,0,1-2,0V11A1,1,0,0,1,14,10Z"
                                                  transform="translate(-2 -2)" fill="#0d0d0d"/>
                                        </svg>
                                    </button>
                                </form>
                                <a href="{{ path('classe_decouverte_categorie_edit', {'id': classe_decouverte_categorie.id}) }}">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18"
                                         viewBox="0 0 18 18">
                                        <path id="edit-alt"
                                              d="M16.293,3.293a1,1,0,0,1,1.414,0l3,3a1,1,0,0,1,0,1.414l-9,9A1,1,0,0,1,11,17H8a1,1,0,0,1-1-1V13a1,1,0,0,1,.293-.707ZM9,13.414V15h1.586l8-8L17,5.414ZM3,7A2,2,0,0,1,5,5h5a1,1,0,0,1,0,2H5V19H17V14a1,1,0,0,1,2,0v5a2,2,0,0,1-2,2H5a2,2,0,0,1-2-2Z"
                                              transform="translate(-3 -3)"/>
                                    </svg>
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                    <a href="{{ path('classe_decouverte_categorie_new') }}">
                        <div class="galerie-bloc-New galerie galerie-item upload-2">
                            <div>
                                <p>Ajouter une thématique <i class="fas fa-plus"></i></p>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/AjaxLengthThematique.js') }}"></script>
{% endblock %}