    <section class="main-sejour container-large_left">
        <svg width="972" height="981.881" viewBox="0 0 972 981.881" role="img" class="sejour-bloc-1">
            <title>{{ centre.legendePhotoEnAvant }}</title>
            <defs>
                <pattern id="pattern{{ centre.id }}1" width="1" height="1" viewBox="224.131 426.523 451.955 456.55">
                    <image preserveAspectRatio="xMidYMid slice" width="972" height="1374.823" xlink:href="{{ asset('uploads/'~centre.photoEnAvant) }}"/>
                </pattern>
            </defs>
            <path id="Soustraction_1" data-name="Soustraction 1" d="M513.394,1044.818h0V320.148L1251.927,62.936l14.718.78,218.588,642.106.16.471-972,338.524Z"
                  transform="translate(-513.394 -62.936)" fill="url(#pattern{{ centre.id }}1)"/>
        </svg>
        <div class="sejour-bloc-2">
            <div class="row-1">
                <h1>{{ centre.name }}</h1>
                <p>{{ centre.description|raw }}</p>
                <div class="contain-items">
                    <div class="item">
                        <p>Localisation</p>
                        <p>{{ centre.localisation }}</p>
                    </div>
                    <div class="item">
                        <p>Activités</p>
                        <p>Nautique</p>
                    </div>
                    <div class="item">
                        <p>Âge</p>
                        <p>{{ centre.ageMin}} à {{ centre.ageMax}} ans</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="container">
        <div class="col-1">
            <svg width="972" height="981.881" viewBox="0 0 972 981.881" role="img">
