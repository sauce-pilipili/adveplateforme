                      transform="translate(-513.394 -62.936)" fill="url(#pattern{{ centre.id }}2)"/>
            </svg>
            <div class="row">
                <h2>Cadre de vie</h2>
            <p>{{ centre.cadreDeVie|raw }}</p>
            </div>
        </div>
        <div class="col-2">
            <svg width="972" height="981.881" viewBox="0 0 972 981.881" role="img" class="sejour-bloc-2_svg">
                <title>{{ centre.legendePhotoEncadrement }}</title>
                <defs>
                    <pattern id="pattern{{ centre.id }}3" width="1" height="1" viewBox="224.131 426.523 451.955 456.55">
                        <image preserveAspectRatio="xMidYMid slice" width="972" height="1374.823" xlink:href="{{ centre.photoEncadrement }}"/>
                    </pattern>
                </defs>
                <path id="Soustraction_42" data-name="Soustraction 42" d="M256.657,1204.015v0h0l-.109-.312L33.581,556.156l.642-.221L960.5,236.995V961.663Z"
                      transform="translate(-33.581 -236.995)" fill="url(#pattern{{ centre.id }}3)"/>
            </svg>
            <div class="row">
                <h2>Encadrement</h2>
                <p>{{ centre.encadrement|raw }}</p>
            </div>
        </div>
    </section>

