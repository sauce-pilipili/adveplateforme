{% extends 'base.html.twig' %}

{% block title %}Accueil ADVE{% endblock %}

{% block body %}
    {{ include('_include/_mainNavigation.html.twig') }}
    <section class="main-sejour container-large_left">
        <svg width="972" height="981.881" viewBox="0 0 972 981.881" role="img" class="sejour-bloc-1">
            <title>{{ sejour.legendePhotoEnAvant }}</title>
            <defs>
                <pattern id="pattern" width="1" height="1" viewBox="224.131 426.523 451.955 456.55">
                    <image  width="972" height="1374.823" xlink:href="{{ asset('uploads/'~sejour.photoEnAvant) }}"/>
                </pattern>
            </defs>
            <path id="Soustraction_19" data-name="Soustraction 19" d="M513.394,1044.818h0V320.148L1251.927,62.936l14.718.78,218.588,642.106.16.471-972,338.524Z" transform="translate(-513.394 -62.936)" fill="url(#pattern)"/>
        </svg>
        <div class="sejour-bloc-2">
            <div class="row-1">
                <h1>{{ sejour.titre }}</h1>
                <p>{{ sejour.introduction|raw }}</p>
                <div class="contain-items">
                    <div class="item">
                        <p>Activités</p>
                        <p>{{ sejour.activite.name }}</p>
                    </div>
                    <div class="item">
                        <p>Âge</p>
                        <p>{{ sejour.ageMin}} à {{ sejour.ageMax }} ans</p>
                    </div>
                    <div class="item">
                        <p>Saison</p>
                        <p>{{ sejour.saisons.name }}</p>
                    </div>
                    <div class="item">
                        <p>Durée de séjour</p>
                        {% for duree in sejour.dureeSejour %}
                            <p>{{ duree.name }}/</p>
                        {% endfor %}
                    </div>
                </div>
                <div class="card-bloc-price">
                    <p>À partir de</p>
                    <p>{{ sejour.prixMin }}€</p>
                    <p>/enfant</p>
                </div>
            </div>
            <div class="row-2">
                <a class="button-primary" href="{{ path('main_contact',{id:sejour.id, sejour:'sejour'}) }}">Réserver ce séjour</a>
            </div>
        </div>
    </section>

    <section class="container overflow-hidden">
        <div class="col-1">
            <svg width="972" height="981.881" viewBox="0 0 972 981.881" role="img">
                <title>{{ sejour.legendePhotoCadre }}</title>
                <defs>
                    <pattern id="pattern3" width="1" height="1" viewBox="224.131 426.523 451.955 456.55">
                        <image  width="972" height="1374.823" xlink:href="{{ asset('uploads/'~sejour.photoCadre) }}"/>
                    </pattern>
                </defs>
                <path id="Soustraction_19" data-name="Soustraction 19" d="M513.394,1044.818h0V320.148L1251.927,62.936l14.718.78,218.588,642.106.16.471-972,338.524Z"
                      transform="translate(-513.394 -62.936)" fill="url(#pattern3)"/>
            </svg>
            <div class="row">
                <h2>Cadre de vie</h2>
            <p>{{ sejour.cadreDeVie|raw }}</p>
            </div>
        </div>
        <div class="col-2" >
            <svg class="sejour-bloc-2_svg" width="972" height="981.881" viewBox="0 0 972 981.881" role="img">
                <title>{{ sejour.legendePhotoEncadrement }}</title>
                <defs>
                    <pattern id="pattern1" width="1" height="1" viewBox="224.131 426.523 451.955 456.55">
                        <image  width="972" height="1374.823" xlink:href="{{ asset('uploads/'~sejour.photoEncadrement) }}"/>
                    </pattern>
                </defs>
                <path id="Soustraction_42" data-name="Soustraction 42" d="M256.657,1204.015v0h0l-.109-.312L33.581,556.156l.642-.221L960.5,236.995V961.663Z"
                      transform="translate(-33.581 -236.995)" fill="url(#pattern1)"/>
            </svg>
            <div class="row">
                <h2>Encadrement</h2>
                {{ sejour.encadrement |raw }}
            </div>
        </div>
    </section>

    <section class="container-diagonal-box margin">
        <div class="diagonal-box container-large">
            <div class="container-card-large row-step">
                <div class="col-1">
                    <h2>Les + du séjour</h2>
                    <p>{{ sejour.plusDuSejour|raw }}
                    </p>
                </div>
                <div class="col-2">
                    <h2>Les indispensables</h2>
                    <p>{{ sejour.indispensables|raw }}
                    </p>
                </div>
                <div class="col-3">
                    <h2>Le transport</h2>
                    <p>Différente possibilité de transport :<br>
                        ✓ Dépôt de l’enfant sur place<br>
                        ✓ Départ depuis Paris<br>
                        ✓ Départ depuis Bordeaux<br>
                        ✓ Départ depuis la Province, plusieurs villes sont
                        possible : Bordeaux, Brest, Carcassone, Clermont-
                        Ferrand, Lille, Limoges, Lyon, Marseille, Metz,
                        Montpellier, Nancy, Nantes, Narbonne, Nimes, Paris,
                        Poitiers, Rennes, St Pierre des Corps et Toulouse
                    </p>
                </div>
            </div>
        </div>
    </section>

    <section class="container-large gap-80">
        <h2>Le programme</h2>
        <div class="container">
            <div class="col-1 card padding-60 gap-40">
                <h3>Activités dominantes</h3>
                <p>{{ sejour.activitesDominantes }}</p>
            </div>
            <div class="col-2 card padding-60 gap-40">
                <h3>Activités annexes</h3>
                <p>{{ sejour.activitesAnnexes }}
                </p>
            </div>
        </div>
    </section>

    <section class="container-diagonal-box margin deco">
        <div class="diagonal-box container-large">
            <div class="container-reservation">
                <h2>Ce séjour vous intéresse ?</h2>
                <p>Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua</p>
                <a class="button-primary" href="{{ path('main_contact',{id:sejour.id, sejour:'sejour'}) }}">Réserver ce séjour</a>
            </div>
        </div>
    </section>


    <section class="container-check container-large">
        <div class="bloc-check">
            <img src="{{ asset('img/check.svg') }}" alt="Séjours vérifiés">
            <div>
                <h3>Séjours vérifiés</h3>
                <p>Lorem ipsum dolor sit amet,
                    consectetur adipiscing elit,</p>
            </div>
        </div>
        <div class="bloc-check">
            <img src="{{ asset('img/pay.svg') }}" alt="Paiement sécurisé">
            <div>
                <h3>Paiement sécurisé</h3>
                <p>Lorem ipsum dolor sit amet,
                    consectetur adipiscing elit,</p>
            </div>
        </div>
        <div class="bloc-check">
            <img src="{{ asset('img/stop.svg') }}" alt="Annulation">
            <div>
                <h3>Annulation</h3>
                <p>Lorem ipsum dolor sit amet,
                    consectetur adipiscing elit,</p>
            </div>
        </div>
    </section>

    <div class="separator"></div>
    {{ include('_include/_mainFooter.html.twig') }}
{% endblock %}
